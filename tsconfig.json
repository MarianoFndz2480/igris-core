{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "lib": ["es2020"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "types": ["node"],
        "paths": {
            "*": ["node_modules/*"]
        },
        "declaration": true,
        "emitDeclarationOnly": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
